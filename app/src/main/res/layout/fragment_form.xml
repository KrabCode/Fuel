<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="krabcode.fuel.MainActivity$FormFragment">


    <TextView
        android:id="@+id/textView_liters"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="@string/form_title_1" />

    <EditText
        android:id="@+id/editText_litres"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView_liters"
        android:ems="10"
        android:inputType="numberDecimal" />

    <CheckBox
        android:id="@+id/checkBox_full"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="true"
        android:text="@string/form_title_2"
        android:layout_alignBaseline="@+id/editText_litres"
        android:layout_alignBottom="@+id/editText_litres"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/editText_litres" />

    <TextView
        android:id="@+id/textView_cost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/editText_litres"
        android:text="@string/form_title_3" />

    <EditText
        android:id="@+id/editText_cost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView_cost"
        android:ems="10"
        android:inputType="numberDecimal" />

    <TextView
        android:id="@+id/textView_costPerLitre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/form_title_4"
        android:layout_below="@+id/editText_litres"
        android:layout_alignStart="@+id/checkBox_full" />

    <EditText
        android:id="@+id/editText_costPerLitre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/editText_cost"
        android:ems="10"
        android:inputType="numberDecimal"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/editText_cost" />

    <TextView
        android:id="@+id/textView_kilometrage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/editText_cost"
        android:text="@string/form_title_5" />

    <EditText
        android:id="@+id/editText_km"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView_kilometrage"
        android:ems="10"
        android:inputType="numberDecimal" />

    <TextView
        android:id="@+id/textView_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/editText_km"
        android:text="@string/form_title_6" />

    <EditText
        android:id="@+id/editText_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="date"
        android:layout_below="@+id/textView_date"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/button_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/save"
        android:layout_alignBaseline="@+id/button_clear"
        android:layout_alignBottom="@+id/button_clear"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/button_clear" />

    <Button
        android:id="@+id/button_clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/yes"
        android:layout_below="@+id/editText_date"
        android:layout_alignParentStart="true"
        android:layout_marginTop="83dp" />

</RelativeLayout>
